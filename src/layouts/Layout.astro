---
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
---

<body class="wrapper default-layout">
  <div class="container">
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </div>
</body>

<style lang="scss">
  .container {
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    & > * {
      grid-column: span 6;
      margin-bottom: 3rem;
    }
  }
</style>
