---
import URL from '@components/URL.astro';

const { subdomain, domain, tld, path, url } = Astro.props;
---

<article>
  <URL {subdomain} {domain} {tld} {path} {url} />
  <figure><div>???</div></figure>
  <p class="details">Built w/ Vue.js and Nuxt</p>
</article>

<style lang="scss">
  @use '../styles/_mixins.scss' as *;

  article {
    background: white;
    figure {
      height: 207px;
      border-radius: 4px;
      background: var(--color-black);
      margin-top: 0.6rem;
      position: relative;
      div {
        border-radius: 12px;
        border-bottom-left-radius: 4px;
        border-bottom-right-radius: 4px;
        background: #dfdfdf;
        position: absolute;
        top: 1px;
        left: 1px;
        right: 1px;
        bottom: 1px;
        display: grid;
        place-items: center;
      }
    }
    p.details {
      font-size: 1.2rem;
      margin-left: 3rem;
      margin-top: 0.6rem;
      position: relative;
    }
    p.details::before {
      content: '';
      @include centered;
      position: absolute;
      left: -4rem;
      width: 6rem;
      height: 0.1rem;
      background: var(--color-black);
    }
  }
  article:not(:last-child) {
    margin-bottom: 4rem;
  }
</style>
