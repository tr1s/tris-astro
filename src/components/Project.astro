---
import URL from '@components/URL.astro';

const { subdomain, domain, tld, path, url, details } = Astro.props;
---

<article>
  <URL {subdomain} {domain} {tld} {path} {url} />
  <figure><div>???</div></figure>
  <p class="details">{details}</p>
  <p class="number"></p>
</article>

<style lang="scss">
  @use '../styles/_mixins.scss' as *;
  article {
    background: white;
    position: relative;

    /* project number counter */
    &::before {
      content: counter(project-counter);
      counter-increment: project-counter;
      position: absolute;
      top: -1.6rem;
      right: 1.3rem;
      font-size: 8.9rem;
      z-index: 1;
      font-family: 'GTFAdieu-Slanted';
      font-weight: 700;
      -webkit-text-stroke-width: 2px;
      -webkit-text-stroke-color: black;
      color: var(--color-white);
      text-shadow: -8px 8px 0px var(--color-accent);
    }
    figure {
      height: 207px;
      border-radius: 4px;
      background: var(--color-black);
      margin-top: 0.6rem;
      position: relative;
      div {
        border-radius: 12px;
        border-bottom-left-radius: 4px;
        border-bottom-right-radius: 4px;
        background: #dfdfdf;
        position: absolute;
        top: 1px;
        left: 1px;
        right: 1px;
        bottom: 1px;
        display: grid;
        place-items: center;
      }
    }
    p.details {
      font-family: var(--font-secondary);
      font-weight: 400;
      font-size: 1.2rem;
      margin-left: 3rem;
      margin-top: 0.6rem;
      position: relative;
    }
    p.details::before {
      content: '';
      @include centered;
      position: absolute;
      left: -4rem;
      width: 6rem;
      height: 0.1rem;
      background: var(--color-black);
    }
  }
  article:not(:last-child) {
    margin-bottom: 4rem;
  }
</style>
